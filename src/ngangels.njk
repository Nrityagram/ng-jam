<script>
	// Fetch all the details element.
	const details = document.querySelectorAll('details');
	// Fetch img element for areas of support
	const imgElm = document.getElementById('areasofsupport-img');
	// Fetch img credit element for areas of support
	const imgElmCredit = document.getElementById('areasofsupport-img-credit');
	// Save id of from data attribute of current targetDetail
	var curID = 'support1';

	// Add the onclick listeners.
	details.forEach((targetDetail) => {
		targetDetail.addEventListener('click', () => {
			// Close all the details that are not targetDetail.
			details.forEach((detail) => {
				if (detail !== targetDetail) {
					detail.removeAttribute('open');
				}
			});
			// Change image for targetDetail
			document
				.getElementById(curID)
				.style
				.opacity = 0;
			document
				.getElementById(targetDetail.dataset.imgId)
				.style
				.opacity = 1;
			curID = targetDetail.dataset.imgId;
		});
	});

	// Fetch all donor level button elements
	const donorLevels = document.querySelectorAll('.vardan-donor-level');
	// Fetch all donor benefit elements
	const donorBenefits = document.querySelectorAll('.benefit');
	// Active donor level
	var donorLevelId = '1';

	// Add the onclick listeners to donor level buttons
	donorLevels.forEach((targetLevel) => {
		targetLevel.addEventListener('click', () => {
			// Make inactive all donor level buttons that are not targetLevel
			donorLevels.forEach((level) => {
				if (level !== targetLevel) {
					level
						.classList
						.remove('active');
				}
			});
			// Make targetLevel button active
			targetLevel
				.classList
				.add('active');
			// Fetch active donor level id
			donorLevelId = targetLevel.dataset.donorlevelId;
			// Check all benefits that contain donor level id in their value
			donorBenefits.forEach((benefit) => {
				// Set benefit to false
				benefit.checked = false;
				// If donor level id is present in checkbox value string, set it to checked
				if (benefit.value.includes(donorLevelId)) {
					benefit.checked = true;
				}
			});
			// Update the red glass button text to the active donor level
			document
				.getElementById('donateButton')
				.innerHTML = targetLevel.dataset.donorlevelName;
		});
	});

	// Donation options by citizenship
	const modal = document.querySelector('#citizen-options');
	const openModal = document.querySelector('.open-modal');
	const closeModal = document.querySelector('.close-button');
	const body = document.querySelector('body');

	if (typeof modal.showModal !== 'function') {
		modal.hidden = true;
	}

	openModal.addEventListener('click', () => {
		const allOptions = document.querySelectorAll('.citizen-type');
		allOptions.forEach((option) => {
			// Clear any previous selection of citizen type
			option.checked = false;
		});
		if (typeof modal.showModal !== 'function') {
			modal.hidden = true;
			alert("Please update your browser to the latest version");
		} else {
			modal.showModal();
			// Disable scroll
			body.style.overflow = 'hidden';
		}
	});

	closeModal.addEventListener('click', () => {
		modal.close();
		// Enable scroll
		body.style.overflow = 'auto';
	});

	const allCitizenOptions = document.querySelectorAll('.citizen-type');
	allCitizenOptions.forEach((targetOption) => {
		targetOption.addEventListener('click', () => {
			// Load appropriate donation page based
			// on the citizenship choice made
			switch (targetOption.id) {
				case 'india':
					switch (donorLevelId) {
						case '1':
							location.href = '/villagechildrenscholar';
							break;
						case '2':
							location.href = '/legacyscholar';
							break;
						case '3':
							location.href = '/artisticdirectorcircle';
							break;
						default:
							break;
					}
					break;
				case 'nri':
					switch (donorLevelId) {
						case '1':
							location.href = '/villagechildrenscholar-other';
							break;
						case '2':
							location.href = '/legacyscholar-other';
							break;
						case '3':
							location.href = '/artisticdirectorcircle-other';
							break;
						default:
							break;
					}
					break;
				case 'usa':
					switch (donorLevelId) {
						case '1':
							location.href = '/villagechildrenscholar-usa';
							break;
						case '2':
							location.href = '/legacyscholar-usa';
							break;
						case '3':
							location.href = '/artisticdirectorcircle-usa';
							break;
						default:
							break;
					}
					break;
				case 'othercountry':
					switch (donorLevelId) {
						case '1':
							location.href = '/villagechildrenscholar-other';
							break;
						case '2':
							location.href = '/legacyscholar-other';
							break;
						case '3':
							location.href = '/artisticdirectorcircle-other';
							break;
						default:
							break;
					}
					break;
				default:
					break;
			}
		});
	});
</script>